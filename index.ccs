body {
    font-family: "Arial", sans-serif;
    background: linear-gradient(135deg, #ffd6e8, #ffeef6);
    text-align: center;
    margin-top: 100px;
    color: #4a2c3a;
}

h1 {
    color: #d63384;
    font-size: 2.5rem;
    margin-bottom: 10px;
}

p {
    color: #6a3a52;
    font-size: 1.1rem;
}

body::before {
    content: "";
    position: fixed;
    inset: 0;
    background: radial-gradient(circle at top, #fff0f7, transparent 60%);
    z-index: -1;
}

